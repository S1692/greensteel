# Gateway 서비스 설정
GATEWAY_NAME=greensteel-gateway

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,https://greensteel.site,https://www.greensteel.site
ALLOWED_ORIGIN_REGEX=^https://.*\.vercel\.app$|^https://.*\.up\.railway\.app$

# 마이크로서비스 URL (Docker 내부 통신용)
AUTH_SERVICE_URL=http://auth-service:8081
CBAM_SERVICE_URL=http://cbam-service:8082
DATAGATHER_SERVICE_URL=http://datagather-service:8083
LCI_SERVICE_URL=http://lca-service:8084
CHATBOT_SERVICE_URL=http://chatbot-service:8084

# Railway 배포 시 사용할 실제 서비스 URL (예시)
# CBAM_SERVICE_URL=https://cbam-service-xxxx.up.railway.app
# AUTH_SERVICE_URL=https://auth-service-xxxx.up.railway.app
# DATAGATHER_SERVICE_URL=https://datagather-service-xxxx.up.railway.app
# LCI_SERVICE_URL=https://lca-service-xxxx.up.railway.app
# CHATBOT_SERVICE_URL=https://chatbot-service-xxxx.up.railway.app

# 챗봇 서비스 업스트림 경로 설정
CHATBOT_UPSTREAM_PATH=/api/v1/chatbot/chat

# 서버 설정
PORT=8080
